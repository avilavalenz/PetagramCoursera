<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="mx.com.tormex.petagram.petagramcoursera.fragment.GaleriaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="@dimen/sizeCircleImage"
            android:layout_height="@dimen/sizeCircleImage"
            android:src="@drawable/buho"
            app:civ_border_color="@color/colorFondoBlanco"
            app:civ_border_width="@dimen/borderCircleImage"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"/>

        <TextView
            android:id="@+id/tvNombreMascotaPerfil"
            android:text="@string/tvNombreMascotaPerfil"
            android:gravity="center"
            android:textSize="@dimen/sizeNombreMascotaPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvGaleria"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"/>

    </LinearLayout>

</FrameLayout>
